<%= form_tag area_climbing_log_path, class: 'gym_select' do %>
  <%= select_tag 'gym_id', 
    options_from_collection_for_select(Gym.all, "id", "name"),
    :prompt => "Select a gym",
    onchange: 'this.form.submit()' %>
  <%= submit_tag 'submit' %>
  <%= javascript_tag "$('.gym_select input').hide()" %>
<% end %>